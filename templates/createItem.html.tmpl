{{define "createItem"}}
<div class="modal fade" id="createItem" tabindex="-1" aria-labelledby="createItemLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5" id="createItemLabel">Criar Item</h1>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form id="item_create" class="row g-3">
					<div id="local" data-on-load="@get('/local/')">
						Carregando locais...
					</div>
					<div class="col">
						<input class="form-control" type="number" name="quantidade" min="0" placeholder="Quantidade" required/>
					</div>
					<textarea class="form-control" name="descricao" placeholder="Descrição" rows="1" required></textarea>
					<div class="col-6">
						<input class="form-control" type="number" name="banda_instalada" min="0" placeholder="Banda instalada" required/>
					</div>
					<div class="col-6">
						<input class="form-control" type="number" name="banda_maxima" min="0" placeholder="Banda máxima" required/>
					</div>
					<div class="col">
						<input class="form-control" type="date" name="data_instalacao" required/></td>
					</div>
					<div class="col mt-4 form-check">
						<input class="form-check-input" type="checkbox" name="status" id="item_checkbox" value="1" checked>
						<label class="form-check-label" for="item_checkbox">
							Ativo?
						</label>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<input type="reset" class="btn btn-warning" form="item_create" value="Limpar"/>
				<button type="button" class="btn btn-primary" data-on-click="@post('/item/', {contentType: 'form', selector: '#item_create'})">
					Enviar
				</button>
			</div>
		</div>
	</div>
</div>
{{end}}
