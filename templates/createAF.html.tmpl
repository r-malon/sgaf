{{define "createAF"}}
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5" id="staticBackdropLabel">Criar AF</h1>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form id="af_create" class="row g-3">
					<div class="col-4">
						<input class="form-control" type="number" name="numero" min="0" placeholder="Número" required/>
					</div>
					<div class="col">
						<input class="form-control" name="fornecedor" placeholder="Fornecedor" required/>
					</div>
					<textarea class="form-control" name="descricao" placeholder="Descrição" rows="1" required></textarea>
					<div class="col">
						<input class="form-control" type="date" name="data_inicio" required/></td>
					</div>
					<div class="col">
						<input class="form-control" type="date" name="data_fim" required/></td>
					</div>
					<div class="col mt-4 form-check">
						<input class="form-check-input" type="checkbox" name="status" id="check" checked>
						<label class="form-check-label" for="check">
							Aberta?
						</label>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
					Fechar
				</button>
				<button type="button" class="btn btn-primary" data-on-click="@post('/af/', {contentType: 'form', selector: '#af_create'})">
					Enviar
				</button>
			</div>
		</div>
	</div>
</div>
{{end}}
